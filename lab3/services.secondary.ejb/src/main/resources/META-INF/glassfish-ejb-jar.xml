<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-ejb-jar PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 EJB 3.1//EN"
        "http://glassfish.org/dtds/glassfish-ejb-jar_3_1-1.dtd">
<glassfish-ejb-jar>
    <enterprise-beans>
        <ejb>
            <ejb-name>MoviesServiceBean</ejb-name>
            <bean-pool>
                <max-pool-size>20</max-pool-size>
                <max-wait-time-in-millis>0</max-wait-time-in-millis>
                <pool-idle-timeout-in-seconds>60</pool-idle-timeout-in-seconds>
                <steady-pool-size>2</steady-pool-size>
            </bean-pool>
        </ejb>
    </enterprise-beans>
</glassfish-ejb-jar>